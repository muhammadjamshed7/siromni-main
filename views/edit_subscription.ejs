<% include backoffice/backoffice-partials/header.ejs %>
<style>
    .card {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
    }
    .btn-primary:hover {
        background-color: #0056b3;
    }
    .form-label {
        font-weight: 600;
    }
</style>
<div id="wrapper">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0">Subscription Plan Update</h2>
            </div>
            <div class="card-body">
                <form action="/update-plan" method="POST">
                    <div class="mb-3">
                        <label for="planName" class="form-label">Plan Name</label>
                        <input type="text" class="form-control" id="planName" value="<%= introText.plan %>" name="planName" placeholder="Enter plan name" required>
                    </div>
                    <div class="mb-3">
                        <label for="planPrice" class="form-label">Plan Price</label>
                        <input type="number" step="0.01" class="form-control" value="<%= introText.price %>" id="planPrice" name="planPrice" placeholder="Enter plan price" required>
                    </div>

                    <div class="mb-3">
                        <label for="planLink" class="form-label">Plan Stripe Link</label>
                        <input type="text" class="form-control" id="planLink" value="<%= introText.planLink %>" name="planLink" placeholder="Enter plan Link" required>
                        <input type="hidden" class="form-control" id="" value="<%= introText.id %>" name="id" placeholder="Enter plan Link" required>
                    </div>

                    <div class="mb-3">
                        <label for="duration" class="form-label">Duration</label>
                        <select class="form-control" id="duration" name="duration" required>
                            <option value="" disabled>Select duration</option>
                            <option value="monthly" <%= introText.duration === 'monthly' ? 'selected' : '' %>>Monthly</option>
                            <option value="yearly" <%= introText.duration === 'yearly' ? 'selected' : '' %>>Yearly</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="4" placeholder="Enter plan description" required><%= introText.key_point %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
<% include backoffice/backoffice-partials/footer.ejs %>
