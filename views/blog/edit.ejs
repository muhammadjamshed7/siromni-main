<% include partials/header %>

<div class="container blog page">
  <% include ../profile/partials/profile-content-tabs.ejs %>
  <div>
    <p class="title">Edit Blog</p>
    <form action="/blog/<%= currentUser.id %>/post/<%= post.id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Title of Post" value="<%= post.title %>">
      </div>
      <div class="form-group">
        <textarea name="body" class="form-control" rows="10" placeholder="Blog Post"><%= post.body %></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-default">Save</button>
      </div>
    </form>
  </div>
</div>

<% include partials/footer %>