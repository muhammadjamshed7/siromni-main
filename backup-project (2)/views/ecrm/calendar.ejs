<% include ecrm-partials/ecrmHeader %>

<div class="container crm page">
	<% include ecrm-partials/navTabs %>
	<hr>
	<p id="title">Calendar</p>
	<p>Click dates to add events</p>
	<div class="row">
		<div class="col-sm-6 col-md-6">
			<div id="calendar"></div>
		</div>
		<div class="col-sm-6 col-md-6">
			<ul class="event-list">
				<p class="sub-title">My Events</p>
				<% if (events.length > 0) { %>
					<% for (var i=0;i<events.length;i++) { %>
						<form action="/office/deleteevent/<%= events[i].id %>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger float-right">Delete</button>
						</form>
						<li>
							<%= events[i].title %> <span class="small-text"><%= events[i].date %> ( <%= events[i].start_time %> to <%= events[i].end_time %> )</span>
							<p><%= events[i].description %></p>
						</li>
						<br>
					<% } %>
				<% } else { %>
					<li>You don't have any events! <br> Please select a date on the calendar to make an appointment.</li>
				<% } %>
			</ul>
		</div>
	</div>
</div>

